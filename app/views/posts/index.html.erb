

<h1>All posts</h1>

<br>
<div class = "container">
  <% @user = current_user%>
  <%= render "users/menu" %>
  
  <div class="col-lg-10">
	<ul class="posts">
	  <% @posts.each do |post| %>
	    <li>
		   <%= link_to post.title, post %>
		   <% if @user.admin?%>
       		 | <%= link_to "delete", post, method: :delete,
                                  data: { confirm: "You sure?" } %>
      		<% end %>
	    </li>
	  <% end %>
	</ul>
  </div>
</div>