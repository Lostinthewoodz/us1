<script src="https://dropinchat.com/dic.js"></script>

<h1>All users</h1>

<br>
<div class = "container">
  <% @user = current_user%>
  <%= render "menu" %>
  
  <div class="col-lg-10">
    <ul>
      <% @users.each do |user| %>
        <li class = "users">
      <%= link_to user.name, user , class: 'users'%>
      <% if current_user.admin? && !current_user?(user) && user.name != 'Admin'%>
        | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } , class: 'users'%>
        | <%= link_to "edit", edit_user_path(user), class: 'users'%>
        <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  
</div>


