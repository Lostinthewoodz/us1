
<%@edituser = User.find(params[:id])%>
<h1>Update <%=@edituser.name%>'s profile</h1>

<br>
<div class = "container">
  <% @user = current_user%>
  <%= render "users/menu" %>
  
  <div class="span6 offset3 edituser">
    <%= form_for(@edituser) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= label :admin, "Make Admin:", style: 'color:black' %>
      <br>
      <%= label :admin, "True", style: 'color:black' %>
      <%= f.radio_button :admin,'true'%> 

      <%= label :admin, "False", style: 'color:black' %>
      <%= f.radio_button :admin,'false' %> 

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password , placeholder: "Password..."%>
      <%= f.text_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.text_field :password_confirmation %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
</div>
