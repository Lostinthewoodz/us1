
<%@edituser = User.find(params[:id])%>
<h1>Update <%=@edituser.name%>'s profile</h1>

<br>
<div class = "container">
  <% @user = current_user%>
  <%= render "users/menu" %>
  
  <div class="span6 offset3 edituser">
    <%= form_for(@edituser) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
</div>
