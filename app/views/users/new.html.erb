

<h1>Create New Agent</h1>

<br>
<div class = "container">
  
  <%= render "menu" %>
  
  <div class="col-lg-10">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <span style: 'display:block'>
      <%= label :admin, "Make Admin:", style: 'color:black' %>
      <br>
      <%= label :admin, "True", style: 'color:black' %>
      <%= f.radio_button :admin,'true'%> 
      <br>
      <%= label :admin, "False", style: 'color:black' %>
      <%= f.radio_button :admin,'false' %> 
      </span>
      <br><br>

      <%= f.text_field :name , placeholder: "Name..."%>

      <%= f.text_field :email, placeholder: "Email..." %>

      <%= f.text_field :password, placeholder: "Password..." %>

      <%= f.text_field :password_confirmation, placeholder: "Password Confirmation..." %>
      
      
      
      <%= f.submit "Create account", class: "btn btn-large btn-primary signoutbutton" %>

    <% end %>
  </div>

  
</div>


  